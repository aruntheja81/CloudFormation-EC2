    }
  }
  }
},
  "Outputs" : {
    "WebsiteURL" : {
      "Value" : { "Fn::Join" : ["", ["http://", { "Fn::GetAtt" : [ "WebServer", "PublicIp" ]}, "/" ]]},
      "Description" : "Index Website"
    }
  }
