                    "Fn::Not": [
                        {
                            "Fn::Equals": [
                                2,
                                {
                                    "Ref": "InstanceCount"
                                }
                            ]
                        }
                    ]
                },
                {
                    "Fn::Not": [
                        {
                            "Fn::Equals": [
                                3,
                                {
                                    "Ref": "InstanceCount"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "Launch5": {
            "Fn::Equals": [
                5,
                {
                    "Ref": "InstanceCount"
                }
            ]
        }
    },
